name: mlops_energy_forecasting
channels:
  - conda-forge
  - defaults
dependencies:
  # Core Python
  - python=3.9

  # Data Science Core
  - pandas>=1.5.0
  - numpy>=1.24.0
  - scikit-learn>=1.3.0
  - matplotlib>=3.6.0
  - seaborn>=0.12.0

  # Time Series & ML
  - tensorflow>=2.13.0
  - prophet>=1.1.0
  - optuna>=3.0.0

  # MLOps
  - mlflow>=2.8.0
  - dvc>=2.10.0

  # Web & API
  - fastapi>=0.100.0
  - uvicorn>=0.20.0
  - streamlit>=1.20.0

  # Utilities
  - pip
  - pip:
      - zenml>=0.40.0
      - prefect>=2.10.0
      - evidently>=0.2.8
      - deepchecks>=0.17.0
      - pydantic>=2.0.0,<3.0.0
      - hydra-core>=1.3.0
      - omegaconf>=2.3.0
      - pytest>=7.0.0
      - pytest-cov>=4.0.0
